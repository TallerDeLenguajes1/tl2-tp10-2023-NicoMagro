@model tl2_tp10_2023_NicoMagro.ViewModels.Usuarios.ModificarUsuarioViewModel

<form asp-controller="User" asp-action="UpdateUser">
    <input hidden asp-for="@Model.Id">

    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Nombre" class="form-label"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
    </div>
    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Password" class="form-label"></label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="mb-3" class="form-group">
        <label asp-for="@Model.RolUsuario" class="form-label"></label>
        <input asp-for="@Model.RolUsuario" class="form-control" />
    </div>

    <button type="submit" class="btn btn-info">Editar</button>
</form>