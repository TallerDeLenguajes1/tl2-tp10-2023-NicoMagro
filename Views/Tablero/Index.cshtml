@{
    ViewData["Title"] = "Home Page";
}

@model tl2_tp10_2023_NicoMagro.ViewModels.Tableros.ListarTablerosViewModel

<h2>Listado de Tableros</h2>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>Id usuario propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tab in Model.ListadoTableros)
        {
            <tr>
                <td hidden>@tab.Id</td>
                <td>@tab.IdUsuarioPropietario</td>
                <td>@tab.Nombre</td>
                <td>@tab.Descripcion</td>
                <td>
                    <a asp-controller="Tablero" asp-action="EditarTablero" asp-route-id="@tab.Id"
                        class="btn btn-info">Editar</a>
                    <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-id="@tab.Id"
                        onclick="return confirm('¿Estás seguro que quieres eliminar el Tablero?')"
                        class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>